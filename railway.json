{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "node dist/index.js",
    "healthcheckPath": "/",
    "restartPolicyType": "ON_FAILURE"
  },
  "variables": {
    "PORT": "3000",
    "OPENAI_MODEL": "gpt-4o-mini",
    "XTTS_SPEAKER": "AsukaCalm",
    "WAKE_WORD": "asuka",
    "DEFAULT_TRANSLATE_TO": "off"
  }
}